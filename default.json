{
    "extends": [
      "default:pinVersions",
      ":automergePatch"
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": ["at any time"] 
    },
    "packageRules": [
      {
        "packageNames": ["ts-jest", "jest", "@types/jest"],
        "groupName": "jest packages",
        "automerge": true
      },
      {
        "packageNames": ["npm-run-all", "concurrently", "nodemon"],
        "groupName": "dev tools"
      },
      {
        "packageNames": ["tslint", "tslint-plugin-prettier", "prettier"],
        "groupName": "lint packages",
        "automerge": true
      },
      {
        "groupName": "minor updates",
        "updateTypes": ["minor"]
      },
      {
        "packageNames": [
          "node",
          "@types/node"
        ],
        "groupName": "node",
        "major": {
          "enabled": false
        }
      }
    ]
  }
  