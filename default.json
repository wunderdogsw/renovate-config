{
    "extends": [
      "default:pinVersions",
      ":automergeMinor",
      ":automergeTesters",
      ":automergeLinters"
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": ["at any time"] 
    },
    "packageRules": [
      {
        "groupName": "minor package updates",
        "updateTypes": ["minor"],
        "automerge": true
      },
      {
        "packageNames": ["npm-run-all", "concurrently", "nodemon"],
        "groupName": "dev tools"
      },
      {
        "packagePatterns": ["prettier"],
        "groupName": "prettier packages",
        "automerge": true
      },
      {
        "packageNames": [
          "node",
          "@types/node"
        ],
        "groupName": "node",
        "major": {
          "enabled": false
        }
      }
    ]
  }
  