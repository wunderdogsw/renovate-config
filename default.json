{
  "extends": [
    "default:pinVersions",
    "group:jsUnitTest",
    "docker:enableMajor",
    "group:linters",
    ":automergeMinor",
    ":automergeTesters",
    ":automergeLinters",
    "workarounds:typesNodeVersioning"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "after 8pm every weekday",
      "every weekend",
      "before 8am every weekday"
    ]
  },
  "dependencyDashboard": true,
  "internalChecksFilter": "strict",
  "packageRules": [
    {
      "groupName": "minor & patch package updates",
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "dev tools",
      "automerge": true,
      "matchPackageNames": [
        "npm-run-all",
        "concurrently",
        "nodemon"
      ]
    },
    {
      "matchPackageNames": [
        "prettier"
      ],
      "groupName": "prettier",
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "major",
        "patch"
      ]
    },
    {
      "groupName": "jest packages",
      "automerge": true,
      "matchPackageNames": [
        "jest",
        "ts-jest",
        "@types/jest"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "major"
      ]
    },
    {
      "groupName": "node",
      "matchPackageNames": [
        "node",
        "@types/node"
      ]
    },
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 4
    }
  ]
}
